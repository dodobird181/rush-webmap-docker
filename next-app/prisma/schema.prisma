generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Question {
  id                    Int       @id @default(autoincrement())
  title                 String    @db.VarChar(255)
  subtitle              String    @db.Text
  content               String    @db.Text
  make_your_move        String    @db.Text
  down_the_rabbit_hole  String    @db.Text
  image                 String    @db.Text
}

model Initiative {
  id          Int       @id @default(autoincrement())
  title       String    @db.VarChar(255)
  description String    @db.Text
  image       String    @db.Text
  url        String    @db.Text
}

model QuestionInitiative {
  question_id     Int
  initiative_id   Int
  @@unique([question_id, initiative_id])
}
